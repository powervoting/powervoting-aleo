{
  "name": "Soter | Aleo Wallet",
  "description": "A safe and fast Chrome extention wallet for Aleo blockchain.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons":{
    "16": "/images/favicon1.png",
    "48": "/images/favicon1.png",
    "128": "/images/favicon1.png"
  },
  "action": {
    "default_icon": "/images/favicon1.png",
    "default_title": "Open Wallet",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["window.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts":[
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js":[
        "content_script.js"
      ],
      "run_at":"document_idle"
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "activeTab",
    "alarms",
    "clipboardWrite",
    "notifications",
    "scripting",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "system.display",
    "cookies"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
